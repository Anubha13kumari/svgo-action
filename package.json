{
  "name": "svgo-action",
  "version": "0.1.0",
  "private": true,
  "description": "Automatically run SVGO on SVGs in Pull Requests",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/main.js -m -o lib",
    "format": "npm run lint -- --fix",
    "lint": "npm run lint:js && npm run lint:ws",
    "lint:js": "eslint . --ext .js,.ts",
    "lint:ws": "editorconfig-checker",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericcornelissen/svgo-action"
  },
  "author": {
    "name": "Eric Cornelissen",
    "email": "ericornelissen@gmail.com",
    "url": "https://ericcornelissen.dev/"
  },
  "keywords": [
    "actions",
    "node",
    "svgo"
  ],
  "dependencies": {
    "@actions/core": "1.2.2",
    "@actions/github": "2.1.0",
    "svgo": "1.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/jest": "25.1.2",
    "@types/node": "12.12.25",
    "@types/svgo": "1.3.0",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "@zeit/ncc": "0.21.1",
    "editorconfig-checker": "3.0.3",
    "eslint": "6.8.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "ts-jest": "25.2.0",
    "typescript": "3.7.5"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}

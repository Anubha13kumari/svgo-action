{
  "name": "svgo-action",
  "version": "1.0.1",
  "private": true,
  "description": "Automatically run SVGO on SVGs in Pull Requests",
  "homepage": "https://github.com/marketplace/actions/svgo-action",
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s build:compile build:bundle",
    "build:bundle": "ncc build lib/main.js -m -o lib && node script/fix-svgo-plugins.js",
    "build:compile": "tsc",
    "clean": "run-p clean:reports",
    "clean:reports": "rimraf ./_reports",
    "format": "run-p format:js format:md",
    "format:js": "npm run lint:js -- --fix",
    "format:md": "npm run lint:md -- --fix",
    "lint": "run-p lint:js lint:md lint:ws",
    "lint:js": "eslint . --ext .js,.ts",
    "lint:md": "markdownlint -c .markdownlintrc.json -i node_modules **/*.md",
    "lint:ws": "editorconfig-checker",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericcornelissen/svgo-action"
  },
  "bugs": {
    "url": "https://github.com/ericcornelissen/svgo-action/issues"
  },
  "author": {
    "name": "Eric Cornelissen",
    "email": "ericornelissen@gmail.com",
    "url": "https://ericcornelissen.dev/"
  },
  "keywords": [
    "actions",
    "node",
    "svgo"
  ],
  "dependencies": {
    "@actions/core": "1.2.4",
    "@actions/github": "2.2.0",
    "js-yaml": "3.14.0",
    "minimatch": "3.0.4",
    "svgo": "1.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/jest": "25.2.3",
    "@types/jest-when": "2.7.1",
    "@types/js-yaml": "3.12.4",
    "@types/minimatch": "3.0.3",
    "@types/node": "12.12.31",
    "@types/svgo": "1.3.3",
    "@typescript-eslint/eslint-plugin": "3.0.1",
    "@typescript-eslint/parser": "3.0.1",
    "@zeit/ncc": "0.22.3",
    "editorconfig-checker": "3.0.5",
    "eslint": "7.1.0",
    "eslint-plugin-jest": "23.13.1",
    "eslint-plugin-mocha": "7.0.0",
    "eslint-plugin-security": "^1.4.0",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "jest-when": "2.7.1",
    "markdownlint-cli": "0.23.1",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "ts-jest": "26.0.0",
    "typescript": "3.9.3"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
